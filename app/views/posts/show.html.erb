<div class="panel">
	<h1>Show other user's post</h1>



	<%= form_for [@post, @comment], url: post_comments_path(@post) do |f| %>
		<fieldset>
			<legend><%= @post.topic  %> </legend>
			 <label>
			 	by <%= @post.user.username %>
			</label>


		<%= f.text_field :text_comment, placeholder: "Add Comment" %>
	   <%= f.submit "submit" %>
		</fieldset>
	   
	<% end %>

	<h3> Comments </h3>
	<ul>
		<% @comments.each do |comment|%>
			<li><%=comment.text_comment%></li>	
			by <%= @comment.user_id %>
			<%= link_to 'Delete', post_path %>
		<%end %>
	</ul>

</div>
