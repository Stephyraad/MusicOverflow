<h1>Show other user's post</h1>
<%= @post.topic  %> 
<% @comments.each do |comment|%>
<div><%=comment.text_comment%></div>	
<%end %>

	
<%= form_for [@post, @comment], url: post_comments_path(@post) do |f| %><br>
   <%= f.text_field :text_comment, placeholder: "Add Comment" %>
   <%= f.submit "submit" %>
<% end %>



