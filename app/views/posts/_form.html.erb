 <!-- Doesnt allow the user to create a new string unless he is signed in -->
 <div id="newstring">
 	<h1>New String</h1>
 <% if !current_user %>
 	<di><h2>Please Sign in/Sign up <br>before you create a new string</h2>
  
  <% else %>	
	<%=form_for @post do |f| %>
		<div class="form_for">
			<div class="small form" id="form_topic">
				<%= f.text_field :topic, placeholder: "String", class: "form-control" %>
			</div>
			

		<%= f.submit %> <br/>
		<%= link_to 'Cancel', posts_path %>
	<%end %>

<% end %> 

</div>