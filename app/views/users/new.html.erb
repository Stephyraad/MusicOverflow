<!-- form to sign up -->
<form>
	<div class= "panel">
		<h1>New User</h1>

		<div class = "row">

			<%= form_for @user do |f| %>
				<div class="large-12 columns">
			  <%= f.text_field :username, placeholder: "Username" %></div>
			  <div class="large-6 columns">
			  <%= f.text_field :email, placeholder: "Email" %></div>
			  <div class="large-6 columns">
			  <%= f.password_field :password, placeholder: "Password" %></div>
			  <%= f.submit %>

			<%end %>

		

  </div>

